<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/skeleton_img_user"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/skeleton_circle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/skeleton_titulo"
                android:layout_width="0dp"
                android:layout_height="20sp"
                android:background="@drawable/skeleton_corner_radius"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toRightOf="@id/skeleton_img_user"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/skeleton_direccion"
                android:layout_width="0dp"
                android:layout_height="20sp"
                android:background="@drawable/skeleton_corner_radius"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="@+id/skeleton_titulo"
                app:layout_constraintRight_toRightOf="@id/skeleton_titulo"
                app:layout_constraintTop_toBottomOf="@id/skeleton_titulo" />

            <View
                android:id="@+id/skeleton_telefono"
                android:layout_width="200dp"
                android:layout_height="20sp"
                android:background="@drawable/skeleton_corner_radius"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintLeft_toLeftOf="@+id/skeleton_direccion"
                app:layout_constraintTop_toBottomOf="@id/skeleton_direccion"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>